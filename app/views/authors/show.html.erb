

<p>
  <strong>First Name:</strong>
  <%= @author.first_name %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @author.last_name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @author.username %>
</p>

<p>
  <strong>Address:</strong>
  <%= @author.additional_info.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @author.additional_info.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @author.additional_info.email %>
</p>

